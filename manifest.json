{
	"name": "Pinyin Reader",
	"version": "1.4.0",
	"manifest_version": 2,
	"background": {
	  "scripts": ["background.js", "lib/chinese-tokenizer.js", "lib/sprintf.min.js"],
	  "persistent": false
	},
	"browser_action": {},
	"description": "Adds pinyin captions above Chinese Hanzi script",
	"icons": { "48": "img/icon_active_48.png",
          	"128": "img/icon_128.png" },
    "options_ui": {
    	"page": "options_page/options.html",
    	"open_in_tab": false
  	},
	"permissions": ["tabs", "activeTab", "storage"],
	"commands": {
		"toggle-pinyin": {
			"suggested_key": {
				"default": "Alt+Shift+F",
				"mac": "Command+Shift+Y"
			},
			"description": "Toggle Pinyin"
		}
	}
}